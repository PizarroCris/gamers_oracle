<div class="mt-5">
  <div class="row justify-content-center">
    <div class="col-10 col-sm-8 col-md-6">
      <div class="card shadow-sm p-4 chat-container <%= 'empty 'unless @available_games.any? %>">
        <h2 class="m-3 text-center">Start a new chat</h1>
        <%= simple_form_for @chat do |f| %>
          <% if @available_games.any? %>
            <%= f.association :game, collection: @available_games, label: "Choose a game" %>
          <% else %>
            <p class="text-muted">All games already have chats.</p>
          <% end %>
          <div class="text-center mt-3">
            <% if @available_games.any? %>
              <%= f.button :submit, "Start Chat", class: "btn btn-brown" %>
            <% else %>
              <%= link_to "Back", chats_path, class: 'btn-brown' %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
