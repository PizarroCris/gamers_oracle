<div class="mt-5">
  <div class="row justify-content-center">
    <div class="col-10 col-sm-8 col-md-6">
      
      <div class="banner-content p-4 <%= 'empty 'unless @available_games.any? %>">
        
        <h2 class="m-3 text-center text-white">Start a new chat</h2>
        
        <%= simple_form_for @chat do |f| %>
          <% if @available_games.any? %>
            <%= f.association :game, 
                              collection: @available_games, 
                              label: "Choose a game", 
                              label_html: { class: "text-white" },
                              input_html: { class: "form-select" } %>
          <% else %>
            <p class="text-center text-white">All games already have chats.</p>
          <% end %>
          <div class="text-center mt-3">
            <% if @available_games.any? %>
              <%= f.button :submit, "Start Chat", class: "btn btn-home" %>
            <% else %>
              <%= link_to "Back", chats_path, class: 'btn-home' %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>