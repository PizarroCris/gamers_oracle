<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow-sm p-4 game-card">
        <h1 class="h4 mb-3">Edit Game</h1>

        <%= simple_form_for @game do |f| %>
          <%= f.input :name, label: "Game name" %>
          <%= f.input :image, label: "Image URL" %>
          <div class="d-flex gap-2 mt-3">
            <%= f.button :submit, "Save changes", class: "btn btn-primary" %>
            <%= link_to "Cancel", game_path(@game), class: "btn btn-secondary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
