<div class="container">
  <div class="row justify-content-center mt-5">
    
    <div class="col-lg-4 col-md-6 col-8 banner-content m-3 p-4">
      
      <h2 class="m-3 text-center text-white">Edit Game</h2>
      
      <%= simple_form_for @game do |f| %>
        <div class="form-inputs">
          
          <%= f.input :name, label: "Game name", label_html: { class: "text-white" } %>
          
          <div data-controller="image-game" class="d-flex align-items-center mb-3">
            <%= f.input :image, as: :file, input_html: { id: "upload-image", class: "d-none", data: { "image-game-target" => "fileInput" } }, label: false %>
            <label for="upload-image" class="btn-home me-2">
              <i class="fas fa-upload"></i> Choose Image
            </label>
            
            <span data-image-game-target="fileNameDisplay" class="text-white">Select file</span>
          </div>
        </div>
        <div class="form-actions d-flex flex-column">
          <%= f.button :submit, "Save Changes", class: "btn-home"%>
          <%= link_to "Cancel", game_path(@game), class: "my-3 btn-home" %>
        </div>
      <% end %>
    </div>
  </div>
</div>