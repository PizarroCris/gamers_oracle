<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-10 col-sm-8 col-md-6 bg-white rounded-4 shadow-sm">
      <h2 class="m-3 text-center">New Game</h2>
      <%= simple_form_for @game do |f| %>
        <div class="form-inputs">
          <%= f.input :name %>
          <div data-controller="image-game" class="d-flex align-items-center mb-3">
            <%= f.input :image, as: :file, input_html: { id: "upload-image", class: "d-none", data: { "image-game-target" => "fileInput" } }, label: false %>
            <label for="upload-image" class="btn btn-outline-secondary me-2">
              <i class="fas fa-upload"></i> Choose Image
            </label>
            <span data-image-game-target="fileNameDisplay">Select file</span>
          </div>
        </div>
        <div class="form-actions d-flex flex-column">
          <%= f.button :submit, "Create", class: "my-3 btn btn-outline-secondary"%>
        </div>
      <% end %>
    </div>
  </div>
</div>
