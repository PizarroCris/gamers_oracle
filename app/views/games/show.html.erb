<div class="container mt-5">
  <div class="card shadow-sm p-4 game-card">
    <h1><%= @game.name %></h1>

    <h3>Chats for this game</h3>
    <% if @chats.any? %>
      <ul>
        <% @chats.each do |chat| %>
          <li><%= link_to "Chat ##{chat.id}", chat_path(chat) %></li>
        <% end %>
      </ul>
    <% else %>
      <p>No chats yet for this game.</p>
      <%= link_to "Start a new chat", new_chat_path(chat: { game_id: @game.id }), class: "btn btn-success" %>
    <% end %>

    <%= link_to "Back to Games", games_path, class: "btn btn-secondary mt-3" %>
  </div>
</div>
