<h1>Chat #<%= @chat.id %></h1>
<p><strong>Game:</strong> <%= @game.name %></p>

<h3 class="h5 mt-3">Messages</h3>
<% if @messages.any? %>
  <ul class="list-group mb-3">
    <% @messages.each do |m| %>
      <li class="list-group-item">
        <strong><%= m.role.capitalize %>:</strong> <%= m.message %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p class="text-muted">No messages yet.</p>
<% end %>

<%= form_with url: ask_ai_chat_path(@chat), method: :post, local: true do %>
  <div class="mb-3">
    <%= text_area_tag :message, nil, rows: 3, class: "form-control", placeholder: "Ask the AIâ€¦" %>
  </div>
  <%= submit_tag "Send", class: "btn btn-primary" %>
<% end %>
