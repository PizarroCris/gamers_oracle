<div class="container mt-5">
  <div class="card shadow-sm p-4 game-card">
    <h1><%= @game.name %></h1>

    <h3>Chats for this game</h3>
    <% if @chats.any? %>
      <ul>
        <% @chats.each do |chat| %>
          <li><%= link_to "Chat ##{chat.id}", chat_path(chat) %></li>
        <% end %>
      </ul>
    <% else %>
      <p>No chats yet for this game.</p>
      <%= link_to "Start a new chat",
                  new_chat_path(chat: { game_id: @game.id }),
                  class: "btn btn-success" %>
    <% end %>

    <div class="d-flex justify-content-between mt-3">
      <%= link_to "Edit Game",
              edit_game_path(@game),
              class: "btn btn-outline-primary" %>

      <%= button_to "Delete Game",
                game_path(@game),
                method: :delete,
                data: { turbo_confirm: "Are you sure you want to delete this game?" },
                class: "btn btn-danger" %>

      <%= link_to "Back to Games",
              games_path,
              class: "btn btn-secondary" %>
    </div>
  </div>
</div>
